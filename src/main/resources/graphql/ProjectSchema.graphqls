type Project {
    id: ID!
    name: String!
    description: String!
    stack: String!
    teamsAmount: Int!
    technicalSpecifications: String
    presentation: String
    isActive: Boolean
    studentProject: Boolean!
    createdAt: String!
    updatedAt: String!
}

input ProjectInput {
    name: String!
    description: String!
    stack: String!
    teamsAmount: Int!
    technicalSpecifications: String
    isActive: Boolean
    presentation: String
    studentProject: Boolean!
}

extend type Query {
    project(id: ID!): Project
    projects: [Project!]!
}

extend type Mutation {
    createProject(input: ProjectInput!): Project
    deleteProject(id: ID!): Project
    deleteAllProjects: Boolean
    archiveProject(id: ID!): Boolean
    unarchiveProject(id: ID!): Boolean
    archiveAllProjects: Boolean
}